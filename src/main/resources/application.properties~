spring.application.name=api-rest

# Configuracion para el acceso a la Base de Datos
spring.jpa.hibernate.ddl-auto=update
spring.jpa.properties.hibernate.globally_quoted_identifiers=true
spring.jpa.show-sql=true

# Puerto donde escucha el servidor una vez se inicie
server.port=8080

# Datos de conexion con la base de datos MySQL
spring.jpa.database-platform=org.hibernate.dialect.MySQLDialect
spring.datasource.driver-class-name=com.mysql.cj.jdbc.Driver
spring.datasource.url=jdbc:mysql://localhost:3306/newNocturnalHunter
spring.datasource.username=root
spring.datasource.password=1234

# Carga la clave privada y la clave pública en el contexto
# rsa.private-key=classpath:certs/private.pem -> descomentar
# rsa.public-key=classpath:certs/public.pem -> descomentar

# Para popular la BBDD
# spring.jpa.properties.javax.persistence.sql-load-script-source=sql/datos-prueba.sql -> descomentar

# AUTOCONFIGURACION DE SPRING SECURITY
# spring.security.oauth2.resourceserver.jwt.authority-prefix= -> descomentar
# spring.security.oauth2.resourceserver.jwt.principal-claim-name=username
# spring.security.oauth2.resourceserver.jwt.authorities-claim-name=roles -> descomentar